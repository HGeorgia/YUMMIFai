<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.integration.clarifai.yummifai.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a picture"
        android:id="@+id/textView"
        android:fontFamily="sans-serif"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:allowUndo="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cameraButton"
        android:clickable="true"
        android:layout_alignTop="@+id/galleryButton"
        android:layout_alignStart="@+id/recipeBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Recipe"
        android:id="@+id/recipeBtn"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/galleryButton"
        android:clickable="true"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/recipeBtn" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ingredient_listView"
        android:layout_above="@+id/recipeBtn"

        android:layout_below="@+id/chooseIngredientText" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/cameraButton"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your ingredients (Generated by Clarifai API Tags endpoint)"
        android:id="@+id/chooseIngredientText"
        android:layout_below="@+id/imageView"
        android:layout_toStartOf="@+id/cameraButton"
        android:layout_alignEnd="@+id/ingredient_listView"
        android:visibility="invisible" />
</RelativeLayout>
